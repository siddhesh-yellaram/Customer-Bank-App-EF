@{
    Layout = "~/Views/Shared/MasterTemplate.cshtml";
    @model CustomerBankApplication.Models.TransactionPageVM
}
<link href="~/Content/RadioBtn.css" rel="stylesheet" />
<div class="container"  style="margin-top: 150px">
    <div class="row col-md-6 col-md-offset-3">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h1>Do Transaction</h1>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm())
                {
                    <div class="form-group">
                        @Html.LabelFor(m => m.Amount)
                        @Html.TextBoxFor(m => m.Amount, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Amount, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.TransactionType)
                        @Html.ValidationMessageFor(m => m.TransactionType, "", new { @class = "text-danger" })
                        <div>
                            @Html.RadioButtonFor(m => m.TransactionType, "D")
                            @Html.Label("Deposit", new { @class = "radio-inline" })
                            @Html.RadioButtonFor(m => m.TransactionType, "W")
                            @Html.Label("Withdraw", new { @class = "radio-inline" })
                        </div>
                    </div>
                    <p>
                        <input type="submit" value="Save" class="btn btn-success"/>
                        <input type="reset" value="Clear" class="btn btn-success" />
                    </p>
                }
                <div>
                    @if (ViewBag.transactionStatus == "Transaction Succesfull")
                    {
                        <div class="alert alert-success">
                            <strong>Transaction was succesfull</strong>
                        </div>
                    }
                    @if (ViewBag.transactionStatus == "Transaction failed")
                    {
                        <div class="alert alert-warning">
                            <strong>Transaction Failed Try Again</strong>
                        </div>
                    }
                </div>
                @Html.ValidationSummary(true, "Please Login", new { @class = "text-danger" })
            </div>
        </div>
    </div>
</div>

